<%= render "shared/navbar" %>
<div class="container-fluid">
		<div class="row">
				<div class="col-md-12">
					<div class="panel panel-default">
  						<div class="panel-body">
							<div class="row">
								<div class="col-md-3">
									<div class="panel panel-default">
  										<div class="panel-heading">
  											<h3 class="panel-title">
  												<%= link_to(@author.name, author_path(@author)) %> (<%= @author.born_in %>-<%= @author.died_in %>)
  											</h3>
  										</div>
  											<div class="panel-body image_show_box">
												<img src="<%= @author.image_url %>">
											</div>
										</div>
									</div>
										<div class="col-md-4">
											<div class="panel panel-default">
					  							<div class="panel-heading">
					  								<h3 class="panel-title">Author bio</h3>
					  							</div>
					  							<div class="panel-body">
					  								<div class="text-justify">
														<%= @author.bio %>
													</div>
					  							</div>	
											</div>
										</div>
										<div class="col-md-5">
											<div class="panel panel-default">
					  							<div class="panel-heading">
					  								<h3 class="panel-title"><%= @author.name %> 's listed artworks</h3>
					  							</div>
					  							<div class="panel-body">
					  								<ul>
					  								<% @artworks.each do |artwork| %>
														<li> <i><%= link_to(artwork.name, artwork_path(artwork)) %></i> (<%= artwork.year %>)</li>
					  								<% end %>
					  								</ul>
					  							</div>	
											</div>
										</div>