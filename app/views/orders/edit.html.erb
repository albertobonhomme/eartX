<div class="container-fluid">
	<div class="row">
		<%= render "shared/leftmenu" %>
		<div class="col-md-10">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Edit order for: "<i><%= @artwork.name %></i>, by <%= @artwork.author.name %>"
					</h3>
				</div>
				<br>
				<div class="row">
					<div class="col-md-10 col-md-offset-2">
					<%= form_for [@artwork, @order] do |f| %>

						<%= f.select :side, ["Buy","Sell"] %>
						<%= f.hidden_field :status, :value => "Limit" %>
						<%= f.hidden_field :user_id, :value => current_user.id %>
						<%= f.label :price %>
						<%= f.number_field :price, max: 10000, min:0.01, step: 0.01 %>
						<%= f.label :shares %>
						<%= f.number_field :shares, max: 1000000, min:1 %>
						<%= f.label :expiration_date %>
						<%= f.date_field :expiration_date %>

						<%= f.submit "Update order" %>
					<% end %>
					</div>
				</div>
					<br>
					
		</div>
			</div>
		</div>
	</div>
</div>