</div>
<div class="col-md-3">
<%= f.label :price %>
<%= f.number_field :price, max: 10000, min:0 %>
</div>
<div class="col-md-4">
<%= f.label :shares %>
<%= f.number_field :shares, max: 1000000, min:0 %>
</div>
<div class="col-md-1">
<%= f.submit "Place order" %>
</div>
</div>
<br>
<div class="row">
<div class="col-md-10 col-md-offset-2">
<%= f.label :expiration_date %>
<%= f.date_field :expiration_date %>
</div>
</div>
<% end %>